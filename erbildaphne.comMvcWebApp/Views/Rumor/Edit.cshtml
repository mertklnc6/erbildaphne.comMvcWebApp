@model RumorViewModel

<h4>Söylenti Düzenle</h4>
<hr />
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form method="post" asp-action="Edit" class="card shadow">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Title -->
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label">Başlık:</label>
                        <input asp-for="Title" class="form-control" placeholder="Başlık giriniz..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Açıklama:</label>
                        <input asp-for="Description" class="form-control" placeholder="Açıklama giriniz..." />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Content -->
                    <div class="form-group mb-3">
                        <label asp-for="Content" class="form-label">İçerik:</label>
                        <textarea asp-for="Content" class="form-control" id="editor" placeholder="İçerik giriniz..."></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Kaydet" class="btn btn-success" />
                        <a asp-controller="Rumor" asp-action="List" class="btn btn-secondary ms-2">Listeye Dön</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>
        <script>
            ClassicEditor
                .create(document.querySelector('#editor'))
                .catch(error => {
                    console.error(error);
                });
        </script>
    }
}