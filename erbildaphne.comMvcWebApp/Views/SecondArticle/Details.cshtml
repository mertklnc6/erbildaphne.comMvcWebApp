@{
    ViewData["Title"] = "Yazı Detay";
}
@{
    Layout = "_LayoutNews";
}
@model SecondArticleViewModel

@{
    List<AuthorViewModel> authorsList = ViewBag.Authors as List<AuthorViewModel>;
    var author = authorsList.FirstOrDefault(a => a.Id == Model.AuthorId);
}
@if (Model.IsPublished && !Model.IsDeleted)
{




    <!-- ====== start tc-main-post-style1 ====== -->
    <section class="tc-main-post-style1 pb-60 mx-auto">
        <div class="container">
            <div class="tc-main-post-title pt-40 pb-40">
                <div class="row">

                    <div class="col-lg-8">
                        <h4 class="title">@author.Name Yazdı</h4>
                        <h2 class="title">@Model.Title</h2>
                    </div>
                </div>
            </div>

            <div class="tc-main-post-img th-650 img-cover mb-50">
                <img src="@Model.PictureUrl" alt="@Model.Title">
            </div>
            <div class="tc-main-post-content color-000">
                <div class="row">
                    <div class="col-lg-1">
                        <div class="sharing">
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <h4 class="sub-title sm-content-width">
                            @Model.Title
                        </h4>
                        <p class="info-text sm-content-width mt-40">
                            @Model.Description
                        </p>
                        
                    </div>
                </div>
            </div>
            <div class="tc-main-post-content color-000">
                <div class="row">
                    <div class="col-lg-1">
                        <div class="sharing">
                        </div>
                    </div>
                    <div class="col-lg-10">
                        <p class="info-text sm-content-width mt-40">

                            @Html.Raw(Model.Content)

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ====== end tc-main-post-style ====== -->
    <!-- ====== start banner18 ====== -->
    <section class="banner18">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="content border-1 border-top border-bottom brd-gray pt-50 pb-50">
                        <a asp-action="Contact" asp-controller="Home" class="d-block img-cover">
                            <img src="/template/assets/img/banner18.png" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ====== end banner18 ====== -->
    <!-- ====== start author info ====== -->

    <section class="tc-author-info-style1 pb-60">
        <div class="container">
            <div class="tc-author-card border-1 border-top brd-gray">
                <div class="content mt-50 p-50 d-block d-lg-flex bg-gray1">

                    <div class="img img-cover icon-85 rounded-circle overflow-hidden flex-shrink-0 me-30">
                        <a asp-action="Details" asp-controller="Author" asp-route-id="@author.Id">
                            <img src="@author.PictureUrl" alt="">
                        </a>
                    </div>

                    <div class="info">
                        <a asp-action="Details" asp-controller="Author" asp-route-id="@author.Id">
                            <h5 class="title fsz-24px fw-bold">@author.Name</h5>
                            <div class="text fsz-15px color-666 mt-20">
                                @Html.Raw(author.Description)
                            </div>
                        </a>
                        <div class="social-links mt-20 fsz-19px">
                            <a href="https://@author.Instagram" target="_blank" class="me-15"><i class="la la-instagram"></i></a>
                            <a href="https://@author.Facebook" target="_blank" class="me-15"><i class="la la-facebook-f"></i></a>
                            <a href="https://@author.Linkedin" target="_blank" class="me-15"><i class="la la-linkedin"></i></a>
                            <a href="https://@author.Website" target="_blank"><i class="la la-link"></i></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <!-- ====== end author info ====== -->
}
