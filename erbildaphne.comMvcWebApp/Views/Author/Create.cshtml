@model AuthorViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Yazar Ekle</h4>
                    <hr />

                    <form method="post" asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Name -->
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Başlık:</label>
                            <input asp-for="Name" class="form-control" placeholder="Başlık giriniz..." />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Açıklama:</label>
                            <input asp-for="Description" class="form-control" placeholder="Açıklama giriniz..." />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Bio -->
                        <div class="form-group mb-3">
                            <label asp-for="Bio" class="form-label">İçerik:</label>
                            <textarea asp-for="Bio" class="form-control" id="editor" placeholder="Biografi giriniz..."></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>

                        <!-- Instagram -->
                        <div class="form-group mb-3">
                            <label asp-for="Instagram" class="form-label">Instagram:</label>
                            <input asp-for="Instagram" class="form-control" placeholder="Instagram adresi giriniz..." />
                            <span asp-validation-for="Instagram" class="text-danger"></span>
                        </div>

                        <!-- Website -->
                        <div class="form-group mb-3">
                            <label asp-for="Website" class="form-label">Website:</label>
                            <input asp-for="Website" class="form-control" placeholder="Website adresi giriniz..." />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>

                        <!-- Linkedin -->
                        <div class="form-group mb-3">
                            <label asp-for="Linkedin" class="form-label">Linkedin:</label>
                            <input asp-for="Linkedin" class="form-control" placeholder="Linkedin adresi giriniz..." />
                            <span asp-validation-for="Linkedin" class="text-danger"></span>
                        </div>

                        <!-- Facebook -->
                        <div class="form-group mb-3">
                            <label asp-for="Facebook" class="form-label">Facebook:</label>
                            <input asp-for="Facebook" class="form-control" placeholder="Facebook adresi giriniz..." />
                            <span asp-validation-for="Facebook" class="text-danger"></span>
                        </div>

                        <!-- Yazar Fotoğrafı -->
                        <div class="form-group mb-3">
                            <label for="image" class="form-label">Yazar Fotoğrafı:</label>
                            <input type="file" name="image" class="form-control" />
                        </div>

                        <!-- Butonlar -->
                        <div class="form-group">
                            <input type="submit" value="Kaydet" class="btn btn-success" />
                            <a asp-controller="Author" asp-action="List" class="btn btn-secondary ms-2">Listeye Dön</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>
        <script>
            ClassicEditor
                .create(document.querySelector('#editor'))
                .catch(error => {
                    console.error(error);
                });
        </script>

    }
}