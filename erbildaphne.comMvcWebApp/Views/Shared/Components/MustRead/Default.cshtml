@model List<WriteViewModel>

<!-- ====== start must read ====== -->
@{
    List<AuthorViewModel> authors = ViewBag.Authors as List<AuthorViewModel>;
}

<section class="pt-50 pb-50">
    <div class="container">
        <div class="row">
            @if (Model.Count > 0)
            {
                <div class="col-lg-9">
                    <!-- must-read -->
                    <section class="tc-must-read-style1 bg-gray2 p-30">
                        <p class="color-000 text-uppercase mb-20 ltspc-1">
                            <a asp-action="Index" asp-controller="Write"> Öne Çıkan Yazılar </a> <i class="la la-angle-right ms-1"></i>
                        </p>
                        @foreach (var write in Model.Take(1))
                        {
                            @if (write.IsChosen == true && write.IsDeleted == false && write.IsPublished == true)
                            {
                                <div class="tc-post-grid-default border-1 border-bottom brd-gray pb-30">
                                    <div class="item">
                                        <div class="row">
                                            <div class="col-lg-5">
                                                <div>
                                                    <a asp-action="Details" asp-controller="Write" asp-route-id="@write.Id">
                                                    <img src="@write.PictureUrl" alt="@write.Title">
                                                    </a>
                                                    
                                                </div>
                                            </div>
                                            <div class="col-lg-7">
                                                <div class="content">                                                   
                                                    <h3 class="title mb-15">
                                                        <a asp-action="Details" asp-controller="Write" asp-route-id="@write.Id">
                                                            @write.Title
                                                        </a>
                                                    </h3>
                                                    <div class="text color-666">
                                                        @write.Description
                                                    </div>
                                                    <div class="meta-bot lh-1 mt-50">
                                                        <ul class="d-flex">
                                                            <li class="date me-4">

                                                                <i class="la la-calendar me-1"></i> @write.CreatedDate.ToShortDateString()

                                                            </li>
                                                            @foreach (var author in authors)
                                                            {
                                                                if (author.Id == write.AuthorId)
                                                                {
                                                                    <li class="author me-4">
                                                                        <a asp-action="Details" asp-controller="Author" asp-route-id="@author.Id"><i class="la la-user me-1"></i>@author.Name</a>
                                                                    </li>
                                                                }
                                                            }

                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        

                        <div class="tc-post-grid-default pt-30">
                            <div class="row">
                                <div class="col-lg-4 border-1 border-end brd-gray">
                                    @foreach (var write in Model.Take(3))
                                    {
                                        @if (write.IsBoosted == true && write.IsDeleted == false && write.IsPublished == true)
                                        {
                                            <div class="item">
                                                
                                                <div class="img img-cover th-180 mb-20">
                                                    <a asp-action="Details" asp-controller="Write" asp-route-id="@write.Id">
                                                    <img src="@write.PictureUrl" alt="@write.Title">
                                                    </a>
                                                </div>
                                                <br />
                                                <div class="content">                                                    
                                                    <h4 class="title ltspc--1">
                                                        <a asp-action="Details" asp-controller="Write" asp-route-id="@write.Id" class="hover-underline">
                                                            @write.Title
                                                        </a>
                                                    </h4>
                                                </div>
                                            </div>
                                        }}
                                </div>
                            </div>
                        </div>

                    </section>
                </div>
            }
            @{
                Html.RenderPartial("_StayConnectedPartial");
            }
        </div>
    </div>
</section>

<!-- ====== end must read ====== -->