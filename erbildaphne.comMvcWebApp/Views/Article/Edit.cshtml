@{
    Layout = "_Layout";
}

@model ArticleViewModel

<h4>Yazı Düzenle</h4>
<hr />
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form asp-action="Edit" enctype="multipart/form-data" class="card shadow" method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Title -->
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label">Başlık:</label>
                        <input asp-for="Title" class="form-control" placeholder="Başlık giriniz..." />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Açıklama:</label>
                        <input asp-for="Description" class="form-control" placeholder="Açıklama giriniz..." />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Content -->
                    <div class="form-group mb-3">
                        <label asp-for="Content" class="form-label">İçerik:</label>
                        <textarea asp-for="Content" class="form-control" id="editor" placeholder="İçerik giriniz..."></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <!-- Image Upload -->
                    <div class="form-group mb-3">
                        <label for="image" class="form-label">Fotoğraf:</label>
                        <input name="image" class="form-control" type="file" />
                    </div>

                    <!-- Author Selection -->
                    <div class="form-group mb-3">
                        <label asp-for="AuthorId" class="form-label">Yazar Seçiniz</label>
                        <select class="form-control" asp-items="@ViewBag.Authors" asp-for="AuthorId">
                            <option value="">Yazar Seçiniz...</option>
                        </select>
                        <span asp-validation-for="AuthorId" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3 text-center">
                        <input type="submit" value="Kaydet" class="btn btn-success" />

                    </div>
                </div>
            </form>
            <a asp-controller="Article" asp-action="List" class="btn btn-secondary ms-2">Geri Dön</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="https://cdn.ckeditor.com/ckeditor5/40.2.0/classic/ckeditor.js"></script>
        <script>
            ClassicEditor
                .create(document.querySelector('#editor'))
                .catch(error => {
                    console.error(error);
                });
        </script>
    }}