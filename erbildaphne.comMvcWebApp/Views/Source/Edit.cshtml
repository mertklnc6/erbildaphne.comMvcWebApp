@model erbildaphne.comMvcWebApp.Models.GNewsSourceViewModel

@{
    ViewData["Title"] = "CreateSource";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Kaynak Düzenle</h1>
    <hr />

    <div class="row">
        <div class="col-md-6 mx-auto">
            <form method="post" asp-action="Edit" enctype="multipart/form-data" class="card shadow">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Name -->
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Kaynak Adı:</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Side -->
                    <div class="form-group mb-3">
                        <label asp-for="Side" class="form-label">Kaynak Tarafı:</label>
                        <select class="form-control" asp-for="Side">
                            <option value="">Kaynak Tarafı Seçiniz...</option>
                            <option>Left</option>
                            <option>Right</option>
                            <option>Center</option>
                        </select>
                        <span asp-validation-for="Side" class="text-danger"></span>
                    </div>

                    <!-- SiteUrl -->
                    <div class="form-group mb-3">
                        <label asp-for="SiteUrl" class="form-label">Site Adresi:</label>
                        <input asp-for="SiteUrl" class="form-control" />
                        <span asp-validation-for="SiteUrl" class="text-danger"></span>
                    </div>

                    <!-- Image Upload -->
                    <div class="form-group mb-3">
                        <label for="image" class="form-label">Kaynak Fotoğrafı:</label>
                        <input name="image" class="form-control" type="file" placeholder="Fotoğraf seçiniz" />
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="List" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>
