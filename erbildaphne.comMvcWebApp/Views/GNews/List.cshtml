<h1>Haber Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Oluştur</a>
</p>

<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Fotoğraf</th>
            <th>Title</th>
            <th>Oluşturulma Tarihi</th>
            <th>Toplam Kaynak</th>
            <th>Liberal Yüzde</th>
            <th>Ulusal Yüzde</th>
            <th>Merkez Yüzde</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td><img width="50px" src="@item.PictureUrl" /></td>
                <td>@item.Title</td>
                <td>@item.CreatedDate</td>
                <td>@item.TotalSource</td>
                <td>@item.LeftPercentage</td>
                <td>@item.RightPercentage</td>
                <td>@item.CenterPercentage</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="GNews" asp-route-id="@item.Id">Düzenle</a>
                    <a asp-action="Publish" asp-controller="GNews" asp-route-id="@item.Id" class="btn @(item.IsPublished ? "btn-secondary" : "btn-success")">
                        @(item.IsPublished ? "Yayından Kaldır" : "Yayına Al")
                    </a>
                    <a asp-action="Delete" asp-controller="GNews" asp-route-id="@item.Id" class="btn @(item.IsDeleted ? "btn-danger" : "btn-warning")">
                        @(item.IsDeleted ? "Kalıcı Olarak Sil" : "Sil")
                    </a>
                    @if (item.IsDeleted)
                    {
                        <a asp-action="RemoveDelete" asp-controller="GNews" asp-route-id="@item.Id" class="btn btn-warning">Geri Al</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
