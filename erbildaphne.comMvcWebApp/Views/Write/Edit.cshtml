@model WriteViewModel

<h4>Yazı Düzenle</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Title" class="control-label">Başlık:</label>
                <input asp-for="Title" class="form-control" placeholder="Başlık giriniz..." />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Açıklama: </label>
                <input asp-for="Description" class="form-control" placeholder="Açıklama giriniz..." />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">İçerik: </label>
                <input asp-for="Content" class="form-control" placeholder="İçerik giriniz..." />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="image" class="control-label">Haber Fotoğrafı: </label>
                <input name="image" class="form-control" type="file" placeholder="Fotoğraf seçiniz" />
            </div>
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label">Yazar Seçiniz</label>
                <select class="form-control" asp-items="@ViewBag.Authors" asp-for="AuthorId">
                    <option value="">Yazar Seçiniz...</option>
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success" />
                <div class="mt-3">
                    <a asp-controller="Write" asp-action="List" class="btn btn-secondary">Geri Dön</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
