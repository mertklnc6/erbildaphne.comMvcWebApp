@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="container mt-3">
    <p>
        <a asp-action="Create" asp-controller="Role" class="btn btn-success">Yeni Rol</a>
    </p>

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Rol Adı</th>
                <th>Açıklama</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Role" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-controller="Role" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">
                        <div class="alert alert-warning">Kayıtlı rol bulunmamaktadır.</div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
